{
  "kind": "collectionType",
  "collectionName": "courses",
  "info": {
    "singularName": "course",
    "pluralName": "courses",
    "displayName": "Course"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "description": {
      "type": "string",
      "required": true
    },
    "thumbnail": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    },
    "duration": {
      "type": "integer"
    },
    "subject": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::subject.subject",
      "inversedBy": "courses"
    },
    "slug": {
      "type": "string"
    },
    "icon": {
      "type": "component",
      "component": "shared.icon",
      "repeatable": false
    },
    "course_lessons": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::course-lesson.course-lesson",
      "mappedBy": "course"
    },
    "grades": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::grade.grade",
      "inversedBy": "courses"
    },
    "isPopular": {
      "type": "boolean",
      "default": false
    }
  }
}
