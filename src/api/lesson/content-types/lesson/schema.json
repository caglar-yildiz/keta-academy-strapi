{
  "kind": "collectionType",
  "collectionName": "lessons",
  "info": {
    "singularName": "lesson",
    "pluralName": "lessons",
    "displayName": "Lesson"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "description": {
      "type": "text",
      "required": true
    },
    "videoURL": {
      "type": "string",
      "required": true
    },
    "order": {
      "type": "integer"
    },
    "quiz": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::quiz.quiz",
      "inversedBy": "lessons"
    },
    "lesson_progresses": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::lesson-progress.lesson-progress",
      "mappedBy": "lesson"
    }
  }
}
